
@{
    ViewData["Title"] = "UpdateInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AppUser
<h1 class="bg-info text-white">Update Information</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Manager" asp-action="UpdateInformation" method="post">
    <div class="form-group">
        <input asp-for="UserName" class="form-control" hidden />
    </div>
    <div class="form-group">
        <input asp-for="Email" class="form-control" hidden/>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
