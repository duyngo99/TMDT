@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>All Roles</h1>
@if (Model.Any())
{
    <a asp-controller="Role" asp-action="CreateRole">Create new role</a>

    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <h5>Use the button below to create role</h5>
    <a asp-controller="Role" asp-action="CreateRole">Create role</a>
}

